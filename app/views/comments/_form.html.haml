= form_for [@need, @need.comments.build], :html => {:class => :'form-horizontal'} do |f|
  %fieldset
    .control-group
      = f.label :commenter, :class => :'control-label'
      .controls
        = f.text_field :commenter, :class => :'input-xlarge'
    .control-group
      = f.label :body, :class => :'control-label'
      .controls
        = f.text_area :body, :rows => 3, :class => :'input-xlarge'
    .form-actions
      = f.submit 'Post', :class => :'btn-primary'
