= form_for [@orphanage, @need] do |f|
  -if @need.errors.any?
    #error_explanation
      %h2= "#{pluralize(@need.errors.count, "error")} prohibited this need from being saved:"
      %ul
        - @need.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :nature
    = f.text_field :nature
  .field
    = f.label :severity
    = f.text_field :severity
  .actions
    = f.submit 'Save'
