= form_for [@orphanage, @need] do |f|
  -if @need.errors.any?
    #error_explanation
      %h2= "#{pluralize(@need.errors.count, "error")} prohibited this need from being saved:"
      %ul
        - @need.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :nature
    = f.collection_select(:nature, NeedNatureList.all, :to_s, :to_s)
  .field
    = f.label :severity
    = f.collection_select(:severity, SeverityList.all, :to_s, :to_s)
  .field
    = f.label :deadline
    = date_field(f, :deadline)
  .actions
    = f.submit 'Save'
